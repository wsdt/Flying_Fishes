<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yourowngame.com.yourowngame.activities.GameLevelHorizontalActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <RelativeLayout
            android:id="@+id/levelBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/biotop_one" />

            <ImageButton
                android:id="@+id/lvl01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="120dp"
                android:layout_marginLeft="150dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/level_01_icon" />

            <ImageButton
                android:id="@+id/lvl02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="109dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/level_02_icon" />

            <ImageButton
                android:id="@+id/lvl03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lvl01"
                android:layout_marginStart="259dp"
                android:layout_marginTop="-120dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/level_03_icon" />

            <ImageButton
                android:id="@+id/lvl04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="71dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/level_04_icon" />

            <ImageButton
                android:id="@+id/lvl05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="421dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/level_05_bonus_icon" />

        </RelativeLayout>
    </HorizontalScrollView>

</android.widget.RelativeLayout>
