<?xml version="1.0" encoding="utf-8"?>

<!-- TOP Layout MUST be a Relativelayout (every activity where we want to display a banner) -->
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="yourowngame.com.yourowngame.activities.MainActivity">



    <LinearLayout
        android:id="@+id/btnList"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnStartGame"
            style="@style/menu_btn"
            android:layout_marginTop="15dp"
            android:onClick="startGame"
            android:text="@string/mainActivity_button_startGame" />

        <Button
            android:id="@+id/btnHighscore"
            style="@style/menu_btn"
            android:layout_marginTop="15dp"
            android:onClick="showHighscore"
            android:text="@string/mainActivity_button_highscores" />

        <Button
            android:id="@+id/btnSettings"
            style="@style/menu_btn"
            android:layout_marginTop="15dp"
            android:text="@string/mainActivity_button_settings" />
    </LinearLayout>

</android.widget.RelativeLayout>
