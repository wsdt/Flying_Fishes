<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameViewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:background="@color/colorPrimaryDark">


    <yourowngame.com.yourowngame.gameEngine.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TODO: Button is not visible [presumably behind bg]  -->

    <Button
        android:id="@+id/shoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="onShootBtn"
        android:padding="5dp"
        android:text="@string/Shoot"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/highscoreLbl"
        android:text="@string/gameActivity_highscore_lbl"
        android:textSize="20sp"
        android:layout_gravity="top|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/highscoreVal"
        android:textSize="20sp"
        android:layout_gravity="top|end"
        android:text="@string/gameActivity_highscore_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>
